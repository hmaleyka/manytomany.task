@model Slider

<div class="container">

    <form method="post" enctype="multipart/form-data">
        <div class="row" >
            <div class="mb-3" col-md-3 style="margin-right: 30px;">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" style="color: red"></span>
            </div>
            <div class="mb-3" col-md-3 style="margin-right: 30px;">
                <label asp-for="SubTitle" class="form-label">SubTitle</label>
                <input asp-for="SubTitle" class="form-control">
                <span asp-validation-for="SubTitle" style="color: red"></span>
            </div>
            <div class="mb-3" col-md-3 style="margin-right: 30px;">
                <label asp-for="ImageFile" class="form-label">Slider Image File</label>
                <input asp-for="ImageFile" class="form-control">
                <span asp-validation-for="ImageFile" style="color: red"></span>
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-6" style="margin-left:15px">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea class="form-control" asp-for="Description" rows="4"></textarea>
            </div>
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>

    </form>


</div>